require "option_parser"
require "./<%= @appname %>"

parser = OptionParser.new do |parser|
  parser.banner = "usage: <%= @appname %>"

  parser.on("-v", "--version", "display the version") { puts <%= @apptitle %>::VERSION; exit 0 }
  parser.on("-h", "--help", "show this help") { puts parser; exit 0 }
end

parser.parse!
